<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %><br>
  <%= f.label :genre_id %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <%= f.label :notes %>
  <%= f.fields_for :notes_attributes do |notes_field| %>
  <%= notes_field.text_field :content, index:0 %>
  <%= notes_field.text_field :content, index:1 %>
  <% end %>
  <br />

  <%= f.submit %>
<% end %>


