<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name%>
  <%=f.label :genre_name%>

  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <textarea name="song[notes_attributes][]" id="song_notes_attributes_0_content"></textarea>
  <textarea name="song[notes_attributes][]" id="song_notes_attributes_1_content"></textarea>
  <br />

  <%= f.submit %>
<% end %>


